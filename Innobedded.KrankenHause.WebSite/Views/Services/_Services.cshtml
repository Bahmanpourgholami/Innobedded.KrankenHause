@model IEnumerable<Innobedded.KrankenHause.Data.Entities.KlinikService>


<section id="services" data-stellar-background-ratio="2.5">
    <div class="container">
        <div class="row">

            <div class="col-md-12 col-sm-12">
                <!-- SECTION TITLE -->
                <div class="section-title wow fadeInUp" data-wow-delay="0.1s">
                    <h2>@Innobedded.KrankenHause.WebSite.Resources.Resource.services</h2>
                </div>
            </div>
            @{
                int counter = 1;
                foreach (var item in Model)
                {
                    if (counter == 4)
                    {
                        break;
                    }
                    <div class="col-md-4 col-sm-6">

                        <div class="news-thumb wow fadeInUp" data-wow-delay="0.4s">
                            <a href="news-detail.html">
                                <img src="~/Content/images/KlinikServices/@item.Picture" class="img-responsive" alt="@item.Title">
                            </a>
                            <div class="news-info">
                                <span>@item.Cost.ToString() &euro;</span>
                                <h3><a href='@Url.Action("ServiceDetails","Services",new { id=item.ServiceID})'>@item.Title</a></h3>
                                <p>@item.Description</p>
                            </div>
                        </div>
                    </div>

                    counter++;

                }
            }




        </div>
    </div>
</section>


