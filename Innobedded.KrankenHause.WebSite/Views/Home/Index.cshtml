                Message = Message + "-  Email is Invalid" + "</br></br>";
                button = false;
            }
            if ($('#phone').val() == "" || $('#phone').val().length < 5  ) {
                Message = Message + "-  Telofon is Invalid" + "</br></br>";
                button = false;
            }



            if (button == false) {
                $('#cf-submit').prop("disabled", true);
                $('#modal_body').html(Message);
                $('#exampleModal').modal("show");
                
            }
            else {
                var button = true;
                $('#cf-submit').prop("disabled", false);
                
            }

        }

       
